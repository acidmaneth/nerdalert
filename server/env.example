# NerdAlert Server Environment Variables

# Server Configuration
PORT=80
NODE_ENV=development

# AI Model Configuration
LLM_API_KEY=your_openai_api_key_here
LLM_BASE_URL=https://api.openai.com/v1
MODEL=gpt-4

# Web Search Configuration
# Choose one or both search providers
SERPER_API_KEY=your_serper_api_key_here
BRAVE_API_KEY=your_brave_api_key_here

# Search Configuration
SEARCH_PROVIDER=serper
SEARCH_FALLBACK_ENABLED=true
SEARCH_TIMEOUT=10000
SEARCH_MAX_RETRIES=3

# Optional: Override system prompt
# SYSTEM_PROMPT=path/to/custom/system-prompt.txt

# Optional: LocalAI Configuration
# LOCALAI_BASE_URL=http://localhost:8080
# LOCALAI_MODEL=your_local_model_name 