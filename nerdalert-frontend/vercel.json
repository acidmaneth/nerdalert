{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node@latest",
      "config": {
        "installCommand": "npm install --legacy-peer-deps --force",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server/index.ts": {
      "maxDuration": 30
    }
  }
} 